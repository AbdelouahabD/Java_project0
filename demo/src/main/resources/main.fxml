<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.controllers.MainController"
            stylesheets="/styles.css"
            prefHeight="600.0" prefWidth="800.0">

    <!-- Menu Bar -->
    <top>
        <MenuBar>
            <Menu text="Gestion">
                <MenuItem text="Utilisateurs" onAction="#showUsersView"/>
                <MenuItem text="Salles" onAction="#showRoomsView"/>
                <MenuItem text="Terrains" onAction="#showTerrainView"/>
                <MenuItem text="Réservations" onAction="#showReservationsView"/>
            </Menu>
        </MenuBar>
    </top>

    <!-- Tab Pane -->
    <center>
        <TabPane fx:id="mainTabPane">
            <!-- Users Tab -->
            <Tab text="Utilisateurs" closable="false">
                <VBox spacing="10" styleClass="content-panel">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button text="Ajouter" onAction="#addUser" styleClass="action-button"/>
                        <Button text="Modifier" onAction="#editUser" styleClass="action-button"/>
                        <Button text="Supprimer" onAction="#deleteUser" styleClass="action-button"/>
                        <TextField fx:id="searchUserField" promptText="Rechercher..." styleClass="search-field"/>
                    </HBox>
                    
                    <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="idColumn" text="ID" />
                            <TableColumn fx:id="nomColumn" text="Nom" />
                            <TableColumn fx:id="prenomColumn" text="Prénom" />
                            <TableColumn fx:id="emailColumn" text="Email" />
                            <TableColumn fx:id="roleColumn" text="Rôle" />
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- Rooms Tab -->
            <Tab text="Salles" closable="false">
                <VBox spacing="10" styleClass="content-panel">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button text="Ajouter" onAction="#addRoom" styleClass="action-button"/>
                        <Button text="Modifier" onAction="#editRoom" styleClass="action-button"/>
                        <Button text="Supprimer" onAction="#deleteRoom" styleClass="action-button"/>
                        <TextField fx:id="searchRoomField" promptText="Rechercher une salle..." styleClass="search-field"/>
                    </HBox>

                    <TableView fx:id="roomTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="roomIdColumn" text="ID" />
                            <TableColumn fx:id="roomNameColumn" text="Nom" />
                            <TableColumn fx:id="roomCapacityColumn" text="Capacité" />
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- Terrains Tab -->
            <Tab text="Terrains" closable="false">
                <VBox spacing="10" styleClass="content-panel">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button text="Ajouter" onAction="#addTerrain" styleClass="action-button"/>
                        <Button text="Modifier" onAction="#editTerrain" styleClass="action-button"/>
                        <Button text="Supprimer" onAction="#deleteTerrain" styleClass="action-button"/>
                        <TextField fx:id="searchTerrainField" promptText="Rechercher un terrain..." styleClass="search-field"/>
                    </HBox>
                    
                    <TableView fx:id="terrainTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="terrainIdColumn" text="ID" />
                            <TableColumn fx:id="terrainNameColumn" text="Nom" />
                            <TableColumn fx:id="terrainTypeColumn" text="Type" />
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- Events Tab -->
            <Tab text="Événements" closable="false">
                <VBox spacing="10" styleClass="content-panel">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button text="Ajouter" onAction="#addEvent" styleClass="action-button"/>
                        <Button text="Modifier" onAction="#editEvent" styleClass="action-button"/>
                        <Button text="Supprimer" onAction="#deleteEvent" styleClass="action-button"/>
                        <TextField fx:id="searchEventField" promptText="Rechercher un événement..." styleClass="search-field"/>
                    </HBox>

                    <TableView fx:id="eventTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="eventIdColumn" text="ID" />
                            <TableColumn fx:id="eventNameColumn" text="Nom" />
                            <TableColumn fx:id="eventDateColumn" text="Date" />
                            <TableColumn fx:id="eventDescriptionColumn" text="Description" />
                            <TableColumn fx:id="eventUserIdColumn" text="Utilisateur" />
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- Reservations Tab -->
            <Tab text="Réservations" closable="false">
                <VBox spacing="10" styleClass="content-panel">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button text="Ajouter" onAction="#addReservation" styleClass="action-button"/>
                        <Button text="Modifier" onAction="#editReservation" styleClass="action-button"/>
                        <Button text="Supprimer" onAction="#deleteReservation" styleClass="action-button"/>
                        <TextField fx:id="searchReservationField" promptText="Rechercher une réservation..." styleClass="search-field"/>
                    </HBox>
                    
                    <TableView fx:id="reservationTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="reservationIdColumnR" text="ID" />
                            <TableColumn fx:id="userIdColumnR" text="Utilisateur" />
                            <TableColumn fx:id="eventIdColumnR" text="Événement" />
                            <TableColumn fx:id="roomIdColumnR" text="Salle" />
                            <TableColumn fx:id="terrainIdColumnR" text="Terrain" />
                            <TableColumn fx:id="dateReservationColumnR" text="Date de Réservation" />
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

        </TabPane>
    </center>

    <padding>
        <Insets top="5" right="5" bottom="5" left="5"/>
    </padding>

</BorderPane>